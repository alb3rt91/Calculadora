<resources>
    <!-- Estilo personalizado para botones rectangulares -->
    <style name="botonrecto" parent="Widget.AppCompat.Button">
        <!-- Color del texto del botón -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- Tamaño del texto del botón -->
        <item name="android:textSize">18sp</item>
        <!-- Fuente personalizada (puedes cambiar a otra fuente si lo prefieres) -->
        <item name="android:fontFamily">@font/calculadora</item>
        <!-- Definimos bordes más rectos -->
        <item name="android:background">@drawable/rectangular_button</item>
        <!-- Establecemos el padding interno -->
        <item name="android:padding">0dp</item>
    </style>
